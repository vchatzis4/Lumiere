@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="error-page">
    <h1>Oops! Something went wrong</h1>
    <p>We're sorry, but something unexpected happened.</p>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="error-actions">
        <a asp-page="/Index" class="btn btn-primary">Go to Home</a>
        <a asp-page="/Admin/Index" class="btn btn-secondary">Go to Admin</a>
    </div>
</div>

<style>
    .error-page {
        padding: 100px 4%;
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
    }

    .error-page h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: #E50914;
    }

    .error-page p {
        font-size: 1.2rem;
        margin: 1rem 0;
        color: #b3b3b3;
    }

    .error-page code {
        background-color: #2F2F2F;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        color: #fff;
    }

    .error-actions {
        margin-top: 3rem;
        display: flex;
        gap: 1rem;
        justify-content: center;
    }
</style>
