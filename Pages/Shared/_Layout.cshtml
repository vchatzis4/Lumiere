<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0a0a0a" />
    <title>@ViewData["Title"] - Lumière</title>
    <link rel="icon" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Cdefs%3E%3ClinearGradient id='gold' x1='0%25' y1='0%25' x2='100%25' y2='100%25'%3E%3Cstop offset='0%25' style='stop-color:%23e8c97a'/%3E%3Cstop offset='100%25' style='stop-color:%23d4a853'/%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width='100' height='100' rx='12' fill='%230a0a0a'/%3E%3Cpath d='M25 30 L75 30 L75 70 L25 70 Z' fill='none' stroke='url(%23gold)' stroke-width='3'/%3E%3Ccircle cx='50' cy='50' r='12' fill='url(%23gold)'/%3E%3Cpolygon points='47,45 47,55 56,50' fill='%230a0a0a'/%3E%3Crect x='30' y='22' width='8' height='12' rx='1' fill='url(%23gold)' opacity='0.7'/%3E%3Crect x='46' y='22' width='8' height='12' rx='1' fill='url(%23gold)' opacity='0.7'/%3E%3Crect x='62' y='22' width='8' height='12' rx='1' fill='url(%23gold)' opacity='0.7'/%3E%3Crect x='30' y='66' width='8' height='12' rx='1' fill='url(%23gold)' opacity='0.7'/%3E%3Crect x='46' y='66' width='8' height='12' rx='1' fill='url(%23gold)' opacity='0.7'/%3E%3Crect x='62' y='66' width='8' height='12' rx='1' fill='url(%23gold)' opacity='0.7'/%3E%3C/svg%3E">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-container">
                <a class="nav-logo" asp-page="/Index">Lumière</a>
                <div class="nav-links">
                    <a asp-page="/Index">Home</a>
                    <a asp-page="/Movies">Collection</a>
                    <a asp-page="/Admin/Index">Library</a>
                </div>
                <div class="nav-search">
                    <form asp-page="/Search" method="get">
                        <input type="text" name="q" placeholder="Search films..." class="search-input" />
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-content">
            <p>Lumière — Your Private Film Collection</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
